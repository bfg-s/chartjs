{
    "name": "bfg/chartjs",
    "description": "Simple package to facilitate and automate the use of ChartJs v2 library",
    "keywords": [
      "chartjs","laravel5","chart","reports","graphics"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Xsaven",
            "email": "xsaven@gmail.com"
        },
        {
            "name": "Felix",
            "email": "fx3costa@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.6.4",
        "laravel/framework": "^8.0|^9.0"
    },

    "autoload": {
      "psr-4": {
        "Bfg\\ChartJs\\" : "src/"
      }
    },

    "extra": {
        "laravel": {
            "providers": [
                "Bfg\\ChartJs\\ChartJsServiceProvider"
            ]
        }
    }
}
